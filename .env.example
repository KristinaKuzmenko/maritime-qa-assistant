# Maritime Q&A Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# REQUIRED SETTINGS - Must be set for the application to work

# OpenAI API Key 
OPENAI_API_KEY=your_openai_api_key_here

# Neo4j Graph Database Password
NEO4J_PASSWORD=your_neo4j_password_here


# OPTIONAL SETTINGS - Have defaults, but can be customized

# API Configuration
API_TITLE=Maritime Documentation Q&A Assistant
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_DATABASE=neo4j

# OpenAI Models
LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=  # Optional for cloud Qdrant

# Qdrant Collections
TEXT_CHUNKS_COLLECTION=text_chunks
SCHEMAS_COLLECTION=schemas
TABLES_TEXT_COLLECTION=tables

# Vector Configuration
VECTOR_DIMENSION=1536
VECTOR_INDEX_TYPE=cosine

# Storage Configuration
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=../../data

# For S3 storage (optional)
# STORAGE_TYPE=s3
# S3_BUCKET_NAME=your_bucket_name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Processing Configuration
CHUNK_SIZE=50
MAX_FILE_SIZE=104857600  # 100MB in bytes
SUPPORTED_LANGUAGES=["en", "ru"]

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=10
QUERY_TIMEOUT=30

# Cache Configuration (optional)
# REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
